<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_detail"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yusuf.gamereference.ui.GameDetailActivity">

    <TextView
        android:layout_below="@id/imageView3"
        android:text="Platforms: Wii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDetailPlatforms"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@id/gameDetailPlatforms"
        android:text="Developers: Nintendo EAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDetailDevelopers"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@id/gameDetailDevelopers"
        android:text="Publishers: Nintendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDetaiPublishers"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_below="@id/similarGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDetaiSimilarGames">
    </ListView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:src="@drawable/gameimage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Giant Bomb page!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLink"
        android:layout_below="@+id/gameDetaiPublishers"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Similar Games:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/similarGames"
        android:textSize="20sp"
        android:layout_below="@+id/textViewLink" />
</RelativeLayout>
